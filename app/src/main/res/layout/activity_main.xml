<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/header"
            android:text="SERVICE"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    
    <LinearLayout
            android:id="@+id/lnGoogle"
            android:layout_below="@+id/header"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_width="120dp"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/imgGoole"
                android:src="@drawable/google"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <TextView
                android:text="@string/google"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/lnFacebook"
            android:layout_below="@+id/header"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/lnGoogle"
            android:layout_marginStart="90dp"
            android:layout_width="120dp"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/imgFacebook"
                android:src="@drawable/fb"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <TextView
                android:text="@string/google"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    
    <TextView
            android:id="@+id/title"
            android:text="INDONEISA SAYA"
            android:textColor="#000000"
            android:layout_above="@+id/ln1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/ln1"
            android:background="#039BE5"
            android:layout_marginStart="120dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="00_00"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnPause"
                    android:background="@drawable/pause"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="80dp"/>

            <Button
                    android:id="@+id/btnPlay"
                    android:background="@drawable/play"
                    android:layout_toStartOf="@+id/btnPause"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="80dp"/>

            <Button
                    android:id="@+id/btnstop"
                    android:background="@drawable/stop"
                    android:layout_toEndOf="@+id/btnPause"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="80dp"/>
        </RelativeLayout>

    </LinearLayout>

    <!--<TextView -->
    <!--android:layout_width="wrap_content" -->
    <!--android:layout_height="wrap_content"/>-->

</RelativeLayout>

